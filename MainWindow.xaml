<Window x:Class="AsyncWorkersApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsyncWorkersApp"
        mc:Ignorable="d"
        Title="Async Workers Monitor" Height="600" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Worker Buttons Panel -->
        <StackPanel Grid.Column="0" Margin="10">
            <TextBlock Text="Worker Threads" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            
            <!-- Two-column grid for worker buttons -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Column 1 (Left) -->
                <StackPanel Grid.Column="0" Margin="0,0,5,0">
                    <Button Name="Worker1Button" Content="Address Lookup (1 min)" Height="40" Margin="0,5" Background="LightGray"/>
                    <Button Name="Worker2Button" Content="Send Email (12 sec)" Height="40" Margin="0,5" Background="LightGray"/>
                    <Button Name="Worker3Button" Content="Send Text (12 sec)" Height="40" Margin="0,5" Background="LightGray"/>
                    <Button Name="Worker4Button" Content="Email Status (10 min)" Height="40" Margin="0,5" Background="LightGray"/>
                    <Button Name="Worker5Button" Content="Text Status (2 min)" Height="40" Margin="0,5" Background="LightGray"/>
                    <Button Name="Worker6Button" Content="Auto Incomplete Visit Roll (10 min)" Height="40" Margin="0,5" Background="LightGray"/>
                    <Button Name="Worker7Button" Content="Create Reminder Instances (30 sec)" Height="40" Margin="0,5" Background="LightGray"/>
                    <Button Name="Worker8Button" Content="Reminders (30 min)" Height="40" Margin="0,5" Background="LightGray"/>
                </StackPanel>
                
                <!-- Column 2 (Right) -->
                <StackPanel Grid.Column="1" Margin="5,0,0,0">
                    <Button Name="Worker9Button" Content="Data Import (10 sec)" Height="40" Margin="0,5" Background="LightGray"/>
                    <Button Name="Worker10Button" Content="Data Cleanup (12 hrs)" Height="40" Margin="0,5" Background="LightGray"/>
                    <Button Name="Worker11Button" Content="Payment Transaction Check (12 hrs)" Height="40" Margin="0,5" Background="LightGray"/>
                    <Button Name="Worker12Button" Content="Sandbox Purge (10 hrs)" Height="40" Margin="0,5" Background="LightGray"/>
                    <Button Name="Worker13Button" Content="Company Backup (10 sec)" Height="40" Margin="0,5" Background="LightGray"/>
                    <Button Name="Worker14Button" Content="Company Restore (10 sec)" Height="40" Margin="0,5" Background="LightGray"/>
                    <Button Name="Worker15Button" Content="Six Hour (6 hrs)" Height="40" Margin="0,5" Background="LightGray"/>
                    <Button Name="Worker16Button" Content="TenDlc (15 days)" Height="40" Margin="0,5" Background="LightGray"/>
                </StackPanel>
            </Grid>
            
            <StackPanel Margin="0,20,0,0">
                <Button Name="StartAllButton" Content="Start All Workers" Height="35" Margin="0,5" Background="LightBlue"/>
                <Button Name="StopAllButton" Content="Stop All Workers" Height="35" Margin="0,5" Background="LightCoral"/>
                <Button Name="ClearLogButton" Content="Clear Log" Height="35" Margin="0,5" Background="LightYellow"/>
            </StackPanel>
        </StackPanel>
        
        <!-- Logging Panel -->
        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <TextBlock Grid.Row="0" Text="Activity Log" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <TextBox Name="LogTextBox" 
                         IsReadOnly="True" 
                         TextWrapping="Wrap" 
                         Background="Black" 
                         Foreground="LimeGreen" 
                         FontFamily="Consolas" 
                         FontSize="12"
                         Padding="10"/>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
